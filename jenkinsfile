pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "on checkout"
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo "on build"
                sh 'python3 -m pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo "on test"
                sh 'python3 manage.py test'
            }
        }
        stage('Report'){
            steps {
                echo "on report"
                echo 'successfully completed'
            }
        }
    }

    post {
        failure {
            echo 'Failed'
        }
    }
}
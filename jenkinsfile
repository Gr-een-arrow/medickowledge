pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "on checkout"
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo "on build"
                bat 'python -m venv venv'
                bat './venv/scripts/activate'
                bat 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo "on test"
                bat 'python manage.py test'
            }
        }
        stage('Report'){
            steps {
                echo "on report"
                echo 'successfully completed'
            }
        }
    }

    post {
        failure {
            echo 'Failed'
        }
    }
}
pipeline {
    agent any

    stages {
        stage('Checkout') {
            step {
                checkout scm
            }
        }
        stage('Build') {
            step {
                echo "On Build"
                sh 'pip install -r requirements'
            }
        }
        stage('Test') {
            step {
                echo "On Test"
                sh 'python manage.py test'
            }
        }
        stage('Report'){
            step {
                echo "On Report"
                echo 'successfully completed'
            }
        }
    }

    post {
        failure {
            echo 'Failed'
        }
    }
}
